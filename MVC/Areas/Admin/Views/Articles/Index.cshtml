@model IEnumerable<Domain.Models.Article>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Articulos</h2>

<a class="btn btn-success" style="margin:5px;" href="@Url.Action("Create")">Create new</a>

<div class="container">

    <div class="row">

        <table class="table table-striped table-dark text-white">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>


                @if (Model.Count() == 0)
                {
                <tr>
                    <td><p class="text-danger">There are not elements yet</p></td>
                </tr>
               

            }
            else
            {
                
                    foreach (var item in Model)
                    {
                    <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-danger" href="@Url.Action("Delete",new {id=item.Id })">Delete</a>
                        <a class="btn btn-info" href="@Url.Action("Edit",new {id=item.Id })">Update</a>
                    </td>
                    </tr>

                    }

                

            }






                </tbody>




            </table>



    </div>



</div>
